{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-3">
            <h1>Mon profil</h1>
        </div>
        <div class="offset-7 col-2">
            <a class="btn" href="#"> Modify profil </a>
{#            <a class="btn" href="{{  {{ path('app_modify_profil', {'id': profil.id}) }} }}"> modify profil </a>#}
        </div>
    </div>


    <div class="container mt-5">
        <div class="row">
            <div class="col-4">
                <div class="row m-5 border">
                    <img  src="{{ asset('build/images/imgLambda.jpg') }}" alt="Photo de profil"/>
                </div>
                <div class="row justify-content-center">
                    {{ profil.name }}
                </div>
                <div class="row justify-content-center">
                    {{ profil.email }}
                </div>
            </div>
            <div class="col-8">
                {% for gab in gabs %}
                    <div class="row">
                        <div class="offset-2 col-8">

                            <div class="card mb-3">
                                <div class="card-body">
                                    <h5 class="card-title">{{ gab.author }}</h5>
                                    <p class="card-text">{{ gab.message }}</p>
                                    <div class="text-end" >
                                        <a href="{{ path('app_new_like', {'id': gab.id,'value': 1}) }}" class="btn btn-primary">like</a>
                                        <a href="{{ path('app_new_like', {'id': gab.id,'value': 2}) }}" class="btn btn-primary">dislike</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
            </div>

        </div>
    </div>



{% endblock %}
